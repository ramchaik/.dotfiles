#-----------------
# Custom
#-----------------
alias c="clear"
alias lsh="ls -lah"
alias grep='grep --colour=auto'
alias r.zsh="source ~/.zshrc"
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias ip="ipconfig getifaddr en0"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

#-----------------
# Git
#-----------------
alias git="hub"
alias s="git status -sb"

# kubernetes
alias k="kubectl"
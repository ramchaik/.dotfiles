#-----------------
# Custom
#-----------------
alias c="clear"
alias b="bat"
alias grep='grep --colour=auto'
alias zs="source ~/.zshrc"
alias zr="exec zsh"
alias l="exa"
alias ll="exa -alhgiHS"
alias ln="ln -v"
alias lg="lazygit"
alias mkdir="mkdir -p"
alias ip="ipconfig getifaddr en0"
alias python="python3"
alias vim="nvim"
alias vi="asdf install nodejs latest && nvim"
alias v="asdf install nodejs latest && nvim"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

#-----------------
# Tmux
#-----------------
alias ta="tmux a"
alias tks="tmux kill-server"

#-----------------
# Git
#-----------------
alias git="hub"
alias s="git status -sb"

